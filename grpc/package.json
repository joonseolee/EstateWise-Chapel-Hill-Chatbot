{
  "name": "estatewise-grpc-service",
  "version": "0.1.0",
  "private": true,
  "description": "Standalone gRPC microservice for EstateWise market intelligence",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "lint": "eslint --ext .ts src",
    "proto:check": "npx buf lint",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.11.1",
    "@grpc/proto-loader": "^0.7.13",
    "dotenv": "^16.4.5",
    "pino": "^9.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@bufbuild/buf": "^1.50.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
